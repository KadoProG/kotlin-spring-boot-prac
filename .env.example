# Server Configuration
SERVER_PORT=8080

# Database Configuration (MySQL)
# MySQLを使用する場合
DB_URL=jdbc:mysql://localhost:3306/kotlinspringboot?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_DRIVER=com.mysql.cj.jdbc.Driver
DB_USERNAME=springuser
DB_PASSWORD=springpass
DB_PLATFORM=org.hibernate.dialect.MySQLDialect

# Database Configuration (H2 - 開発用)
# H2を使用する場合（デフォルト）
# DB_URL=jdbc:h2:mem:testdb
# DB_DRIVER=org.h2.Driver
# DB_USERNAME=sa
# DB_PASSWORD=
# DB_PLATFORM=org.hibernate.dialect.H2Dialect

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production-minimum-256-bits
JWT_EXPIRATION=86400000

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# MySQL Docker Configuration (docker-compose.yml用)
MYSQL_DATABASE=kotlinspringboot
MYSQL_USER=springuser
MYSQL_PASSWORD=springpass
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_PORT=3306
PHPMYADMIN_PORT=8080
